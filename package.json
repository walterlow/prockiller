{
  "name": "@walterlow/prockiller",
  "version": "1.0.2",
  "description": "Interactive CLI to find and kill processes by port",
  "author": "walterlow",
  "license": "MIT",
  "type": "module",
  "bin": {
    "prockiller": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "cli",
    "port",
    "kill",
    "process",
    "ink",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/walterlow/prockiller"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsx source/cli.tsx",
    "build": "tsc",
    "start": "node dist/cli.js",
    "prepublishOnly": "npm run build",
    "bundle": "esbuild source/cli.tsx --bundle --platform=node --format=esm --outfile=dist/bundle.js --external:yoga-wasm-web",
    "pkg": "npm run bundle && pkg dist/bundle.js --targets node18-win-x64 --output dist/prockiller.exe",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "dependencies": {
    "ink": "^5.0.1",
    "ink-select-input": "^6.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^24.10.1",
    "@types/react": "^18.3.12",
    "esbuild": "^0.24.0",
    "jest": "^29.7.0",
    "pkg": "^5.8.1",
    "ts-jest": "^29.1.2",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
